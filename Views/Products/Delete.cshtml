@model Asp_Store.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center">Delete Product</h1>

<h4 class="text-center">Are you sure you want to delete this?</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
                <p class="card-text"><strong>Price:</strong> @Model.Price</p>
                <p class="card-text"><strong>Description:</strong> @Model.Description</p>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger w-100">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </form>
            </div>
            <div class="col">
                <a asp-action="Index" class="btn btn-info w-100">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    .btn-danger {
        background-color: #dc3545;
        border-color: #dc3545;
    }

        .btn-danger:hover {
            background-color: #c82333;
            border-color: #bd2130;
        }

    .btn-info {
        background-color: #17a2b8;
        border-color: #17a2b8;
    }

        .btn-info:hover {
            background-color: #117a8b;
            border-color: #10707f;
        }

    .card {
        border: 1px solid #ddd;
        border-radius: 5px;
        margin-top: 20px;
        padding: 15px;
    }

    .text-center {
        text-align: center;
    }
</style>
